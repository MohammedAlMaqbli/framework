        </group>
        <group title="Movements" width="100%" invisible="active_id.env.context.is_add_pack == true">
            <field name="move_ids">
                <tree>
                    <field name="product_id"/>
                    <field name="product_qty"/>
                    <field name="location_src_id"/>
                    <field name="location_dest_id"/>
                </tree>
            </field>
