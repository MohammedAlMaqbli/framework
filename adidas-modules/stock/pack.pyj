import orm.models as models
import orm.fields as fields
import orm.tools as tools
import orm.api as api
from ir.ui import menu, view

pack = {}

class StockPack(models.Model):
    _name = 'stock.pack'

    def _get_box_number(self):
        return self.env['stock.pack'].with_context(order='name desc', limit=1).search(['name', '!=', False]).then(
        def (pack_id):
            console.log(pack_id.name)
            if pack_id.length > 0 and pack_id.name and pack_id.name.split:
               name = pack_id.name
               if pack.last_box:
                  name = tools.max(pack_id.name, pack.last_box)
               name = 'Box ' + str.zfill((parseInt(name.split(' ')[1]) + 1).toString(), 3)
               pack.last_box = name
               return name
            return 'Box 001'
        )

    name = fields.Char(string="Pack/Box Number", defaults=_get_box_number, required=True)
    date = fields.Datetime(string="Date")
    location_id = fields.Many2one('stock.location', string="Current Location")
    picking_id = fields.Many2one('stock.picking', string="Operation")
    move_ids = fields.One2many('stock.move', 'pack_id', string="Movements")

StockPack()

menu.add({'id': 'pack', 'parent': 'stock', 'string': 'Packs/Boxes', 'model': 'stock.pack', 'sequence': 6})


